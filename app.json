{
    "id": "com.weatherunderground",
    "version": "0.0.2",
    "compatibility": ">=3.0.0",
    "sdk": 2,
    "name": {
        "en": "Weather Underground"
    },
    "description": {
        "en": "Get the last data from you weather station"
    },
    "category": [
        "climate"
    ],
    "tags": {
        "en": [
            "Weather",
            "Climate"
        ]
    },
    "permissions": [],
    "bugs": {
        "url": "https://github.com/AdyRock/com.weatherunderground/issues"
    },
    "source": "https://github.com/AdyRock/com.weatherunderground",
    "homeyCommunityTopicId": 26309,
    "author": {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "drivers": [
        {
            "id": "weather",
            "name": {
                "en": "Weather Station"
            },
            "class": "other",
            "capabilities": [
                "measure_temperature",
                "measure_temperature.feelsLike",
                "measure_temperature.windchill",
                "measure_temperature.dewPoint",
                "measure_humidity",
                "measure_wind_angle",
                "measure_wind_strength",
                "measure_gust_strength",
                "measure_rain",
                "measure_rain.total",
                "measure_pressure",
                "Ultraviolet"
            ],
            "capabilitiesOptions": {
                "measure_temperature.feelsLike": {
                    "title": { "en": "Feels Like" }
                },
                "measure_temperature.windchill": {
                    "title": { "en": "Wind chill" }
                },
                "measure_temperature.dewPoint": {
                    "title": { "en": "Dew point" }
                },
                "measure_rain.total": {
                    "title": { "en": "Rain Total" }
                }
            },
            "pair": [
                {
                    "id": "weather_pair"
                }
            ],
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "Station Details"
                    },
                    "children": [
                        {
                            "id": "stationID",
                            "type": "text",
                            "label": {
                                "en": "Station ID"
                            }
                        },
                        {
                            "id": "apiKey",
                            "type": "text",
                            "label": {
                                "en": "API Key"
                            }
                        }
                    ]
                }
            ],
            "images": {
                "large": "/drivers/weather/assets/images/large.png",
                "small": "/drivers/weather/assets/images/small.png"
            }
        }
    ]
}