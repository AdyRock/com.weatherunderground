                "nl": "Station ID",
                "de": "Station ID",
                "fr": "Id de la station"
            }
        },
        {
            "id": "apiKey",
            "type": "text",
            "label":
            {
                "en": "API Key",
                "nl": "API Sleutel",
                "de": "API Key",
                "fr": "Clé API"
            }
        } ]
    } ],
    "images":
    {
        "large": "/drivers/weather/assets/images/large.png",
